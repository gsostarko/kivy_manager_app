<WindowManager>:
	LoginWindow:
	HomeWindow:
		

<LoginWindow>:
	name: "LoginWindow"
	MDCard:
		size_hint: None, None
		size: 300, 380
		pos_hint: {"center_x": 0.5, "center_y": 0.3}
		elevation: 0
		padding: 25
		spacing: 25
		orientation: 'vertical'

		MDCard:
			size_hint: None, None
			size: 150,150
			background:'images/login_ico/electrician.png'   
			pos_hint: {"center_x": 0.5, "center_y": 0.5}

		MDLabel:
			id: welcome_label
			text: "Dobrodošli"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 15

		MDTextField:
			id: user_id
			hint_text: "Korisničko ime"
			icon_right: "account"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}

		MDTextField:
			id: password
			hint_text: "PIN"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 18
			pos_hint: {"center_x": 0.5}
			password: True

		MDRaisedButton:
			text: "Prijava"
			font_size: 16
			pos_hint: {"center_x": 0.5}
			on_release: app.root.current = "HomeWindow"
			
				
		Widget:
			size_hint_y: None
			height: 10

